<Window x:Class="DTEditData.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DTEditData"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl x:Name="tabControl" Margin="0,0,10,10">
            <TabItem Header="Edit Data">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="gridMain" Margin="10"/>
                </Grid>
            </TabItem>
            <TabItem Header="Badges">
                <Grid Background="#FFE5E5E5">
                    <StackPanel HorizontalAlignment="Left" Height="258" Margin="10,10,0,0" VerticalAlignment="Top" Width="477"/>
                    <DataGrid x:Name="gridBadges" Margin="10"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
